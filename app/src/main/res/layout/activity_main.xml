<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.MainActivity"
    android:background="@color/colorBackgroundRV">


    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/btnVocabulary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dictionary"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/ButtonMainStyle"
        app:typeface="roboto_light_italic"
        />

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/btnTester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tester"
        style="@style/ButtonMainStyle"
        app:typeface="roboto_slab_bold"
        />

</LinearLayout>
